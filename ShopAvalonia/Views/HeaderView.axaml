<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:ShopAvalonia.ViewModels"
             x:Class="ShopAvalonia.Views.HeaderView"
             x:DataType="vm:HeaderViewModel">

  <Border Background="#f5f5f5" Padding="10">
    <TextBlock Text="{Binding CurrentPageTitle, StringFormat=Выбранная страница: {0}}"
               FontSize="16" VerticalAlignment="Center" />
  </Border>
</UserControl>
